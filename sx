  local class_name="$1"
  local service_name=""
  local icon=""
  
  # Extract service name and assign icon
  case "$class_name" in
    *"google"*) service_name="Google"; icon="ðŸ”" ;;
    *"imageshack"*) service_name="Imageshack"; icon="ðŸ“·" ;;
    *"paypal"*) service_name="PayPal"; icon="ðŸ’³" ;;
    *"eventbrite"*) service_name="Eventbrite"; icon="ðŸ“…" ;;
    *"spotify"*) service_name="Spotify"; icon="ðŸŽ§" ;;
